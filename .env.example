# =============================================================================
# AI WORKDESK ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# LLM API KEYS
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-organization-id-here  # Optional

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google AI Configuration (if needed)
# GOOGLE_API_KEY=your-google-api-key-here

# Cohere Configuration (if needed)
# COHERE_API_KEY=your-cohere-api-key-here

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
# Default models to use
DEFAULT_LLM_MODEL=gpt-4o-mini
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

# Temperature settings
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=4096

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=logs/ai_workdesk.log

# =============================================================================
# VECTOR STORE CONFIGURATION
# =============================================================================
# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=data/chroma_db
CHROMA_COLLECTION_NAME=ai_workdesk_collection

# =============================================================================
# DATA PATHS
# =============================================================================
RAW_DATA_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
OUTPUT_DATA_PATH=data/outputs

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# API rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Retry configuration
MAX_RETRIES=3
RETRY_DELAY=1

# =============================================================================
# OPTIONAL: PRIVATE PACKAGE INDEX
# =============================================================================
# If you're using a private package index
# UV_INDEX_URL=https://your-private-index.com/simple
# UV_INDEX_USERNAME=your-username
# UV_INDEX_PASSWORD=your-password
