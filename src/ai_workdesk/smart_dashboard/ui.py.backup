        trends_cards = [c for c in all_cards if c.source_type == SourceType.TRENDS]
        feed_cards = [c for c in all_cards if c.source_type != SourceType.TRENDS]
        feed_cards.sort(key=lambda x: x.timestamp, reverse=True)
        
        greeting = get_greeting()
        date_str = datetime.now().strftime('%A, %B %d')
        
        html_content = f"""
        <div class="dashboard-wrapper">
            <!-- Top Bar with User Profile & Weather -->
            <div class="top-bar">
                {get_user_profile()}
                {get_weather_widget()}
            </div>
            
            <div class="ambitions-grid">
                <!-- Left Column: Focus Zone -->
                <div class="focus-zone">
                    <div>
                        <div class="editorial-header">{greeting}, Riemann.</div>
                        <div class="editorial-sub">Here is your briefing for {date_str}. You have {len(urgent_cards)} urgent items requiring attention.</div>
                    </div>
                    
                    <div style="font-weight: 700; font-size: 1.7rem; margin-bottom: -10px;">Your Smart Feed</div>
                    {render_smart_feed(feed_cards)}
                </div>
                
                <!-- Right Column: Control Center -->
                <div class="control-center">
                    <!-- Floating Stats -->
                    <div class="floating-stat">
                        <div class="stat-value">{len(all_cards)}</div>
                        <div class="stat-label">Total Items</div>
                    </div>
                    
                    <div class="floating-stat">
                        <div class="stat-value" style="color: #ef4444;">{len(urgent_cards)}</div>
                        <div class="stat-label">Critical Actions</div>
                    </div>
                    
                    <!-- Trends Glass Card -->
                    {render_trends_minimal(trends_cards)}
                    
                    <!-- Quick Action Glass Card -->
                    <div class="glass-card" style="margin-top: auto;">
                        <div style="font-weight: 800; font-size: 1.4rem; margin-bottom: 20px;">‚ö° Quick Actions</div>
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 14px;">
                            <button style="padding: 16px; border-radius: 14px; border: 1px solid #e2e8f0; background: white; cursor: pointer; font-size: 1rem; font-weight: 600;">Clear Inbox</button>
                            <button style="padding: 16px; border-radius: 14px; border: 1px solid #e2e8f0; background: white; cursor: pointer; font-size: 1rem; font-weight: 600;">Start Focus</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        """
        return html_content, all_cards

    def ask_ai(query, provider, model, cards):
        if not query:
    def update_models(provider):
        if provider == "OpenAI":
            return gr.update(choices=["gpt-4o", "gpt-4-turbo", "gpt-3.5-turbo"], value="gpt-4o")
        else:
            models = processor.client.list_models()
            default = "deepseek-r1:7b" if "deepseek-r1:7b" in models else (models[0] if models else "llama3")
            return gr.update(choices=models, value=default)

    # Event Wiring - Auto-trigger on Enter
    query_input.submit(fn=ask_ai, inputs=[query_input, provider_dropdown, model_dropdown, cards_state], outputs=answer_output)
    provider_dropdown.change(fn=update_models, inputs=provider_dropdown, outputs=model_dropdown)
    
    return dashboard_html, refresh_data
