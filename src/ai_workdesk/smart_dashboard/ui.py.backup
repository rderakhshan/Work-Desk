def render_smart_feed(cards: List[DashboardCard]) -> str:
    html = '<div class="feed-timeline">'
    for card in cards[:8]:
        icon_class = "icon-rss"
        icon_symbol = "üì∞"
        if card.source_type == SourceType.EMAIL: 
            icon_class = "icon-email"
            icon_symbol = "üìß"
        elif card.source_type == SourceType.YOUTUBE: 
            icon_class = "icon-video"
            icon_symbol = "üì∫"
        elif card.source_type == SourceType.TRENDS:
            icon_class = "icon-trends"
            icon_symbol = "üìà"
            
        # Make item clickable with link
        html += f"""
        <a href="{card.source_link}" target="_blank" class="timeline-item">
            <div class="timeline-icon {icon_class}">{icon_symbol}</div>
            <div class="timeline-content">
                <div class="timeline-title">{card.title}</div>
                <div class="timeline-meta">{card.summary[:150]}...</div>
                <div class="timeline-meta" style="margin-top: 8px; opacity: 0.7; font-size: 0.9rem;">{card.timestamp.strftime('%H:%M')} ‚Ä¢ {card.source_type.value}</div>
            </div>
        </a>
        """
    html += '</div>'
    return html

def render_trends_minimal(cards: List[DashboardCard]) -> str:
    html = '<div class="glass-card"><div style="font-weight: 800; font-size: 1.4rem; margin-bottom: 24px;">üìà Trending Now</div>'
    for i, card in enumerate(cards[:5]):
        html += f"""
        <a href="{card.source_link}" target="_blank" style="text-decoration: none; color: inherit;">
            <div class="trend-row">
                <span class="trend-name">{card.title}</span>
                <span class="trend-rank">#{i+1}</span>
            </div>
        </a>
        """
    html += '</div>'
    return html

def render_dashboard():
    engine = DataEngine()
    processor = AIProcessor()

    # Fetch initial Ollama models
    try:
        ollama_models = processor.client.list_models()
    except:
        ollama_models = ["deepseek-r1:7b", "llama3", "mistral"]

    # Set default to deepseek-r1:7b if available
    default_model = "deepseek-r1:7b" if "deepseek-r1:7b" in ollama_models else (ollama_models[0] if ollama_models else "llama3")

    # State to hold current dashboard data for chat context
    cards_state = gr.State([])
    
    # Chat Controls at TOP - Streamlined (no buttons, Enter to submit)
    with gr.Row():
        query_input = gr.Textbox(
            placeholder="üí¨ Ask AI about your dashboard items... (Press Enter to send)", 
            show_label=False, 
            scale=4, 
            elem_id="chat-input"
        )
        provider_dropdown = gr.Dropdown(choices=["Ollama", "OpenAI"], value="Ollama", show_label=False, scale=1)
        model_dropdown = gr.Dropdown(choices=ollama_models, value=default_model, show_label=False, scale=1)

    # Progress indicator and answer output
    with gr.Row():
        answer_output = gr.Markdown(visible=False)

    # The Dashboard Container
    dashboard_html = gr.HTML(value='<div class="dashboard-wrapper">Loading...</div>')

    def refresh_data():
        # Fetch all data
        all_cards = engine.refresh_all()
        
        # Categorize
